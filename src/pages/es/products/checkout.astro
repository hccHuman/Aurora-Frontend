---
import CheckoutComponent from "@/components/tsx/Checkout/CheckoutComponent";
import Layout from "@/layouts/Layout.astro";
import { t } from "@/modules/YOLI/injector";
let lang = "es";
---

<Layout
  lang={lang}

  title="Checkout – Lahia Shop"
  metaTitle="Checkout – Lahia Shop"

  description="Proceso de pago seguro"
  metaDescription="Proceso de pago seguro"

  canonicalUrl={`https://lahia.shop/${lang}/products/checkout`}

  previewImage="https://lahia.shop/assets/preview-checkout.png"

  home={true}
  noindex={true}
  showSearch={false}
  about={false}
>
  <div class="flex-1 w-full flex items-start justify-center py-10 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-4xl">
      <h1 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 mb-6 text-center">
        {t("checkout.title", lang)}
      </h1>

      <div
        class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-2xl shadow-lg p-6 sm:p-8 transition-colors"
      >
        <CheckoutComponent client:load lang={lang} />
      </div>
    </div>
  </div>
</Layout>
