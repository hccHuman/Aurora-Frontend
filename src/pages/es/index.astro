---
import Layout from "@/layouts/Layout.astro";
import ChatbotLoader from "@/components/ui/ChatbotLoader.astro";
import CategoryListComponent from "@/components/tsx/Paginator/CategoryListComponent";

let lang = "es";
---

<Layout
  lang={lang}
  title="Aurora Chat - Español"
  description="Plataforma de chat con IA en español"
  canonicalUrl="https://miweb.com/es/"
  previewImage="/assets/preview.png"
  home={false}
>
  <!-- AI Chatbot Component: Loads Live2D avatar and chat interface -->
  <ChatbotLoader/>

  <!-- Product Categories Grid: Fetches and displays categories from backend -->
  <CategoryListComponent client:load lang={lang}/>
</Layout>
