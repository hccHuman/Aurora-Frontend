---
import { LoginComponent } from "@/components/tsx/AuthForm/LoginComponent";
import Layout from "@/layouts/LayoutForm.astro";
import "@/styles/Components/Main.css";
import "@/styles/Components/Login.css";

let lang = "es";
---

<Layout
  lang={lang}

  title="Login – Aurora Chat"
  metaTitle="Login – Aurora Chat"

  description="Accede de forma segura a tu cuenta en Aurora Chat"
  metaDescription="Accede de forma segura a tu cuenta en Aurora Chat"

  canonicalUrl="https://lahia.shop/es/account/login"

  previewImage="https://lahia.shop/assets/preview-login.png"

  home={false}
  noindex={true}
  about={false}
  showSearch={false}
>
  <!-- Montamos el componente React solo en cliente -->
  <LoginComponent client:load lang="es"/>
</Layout>
