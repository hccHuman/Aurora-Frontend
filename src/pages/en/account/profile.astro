---
import Layout from "@/layouts/Layout.astro";
import ProfileView from "@/components/tsx/Profile/ProfileView";
import LoginReader from "@/components/tsx/statement/loginReader";
import UserOnly from "@/components/tsx/statement/UserOnly";
import { t } from "@/modules/YOLI/injector";

const lang = "en";
---

<Layout
  lang={lang}
  title={t("profile.title", lang)}
  metaTitle={t("profile.title", lang)}
  description={t("profile.subtitle", lang)}
  metaDescription={t("profile.subtitle", lang)}
  canonicalUrl="https://lahia.shop/en/account/profile"
  previewImage="https://lahia.shop/assets/preview.png"
  home={false}
  about={false}
  showSearch={false}
>
  <!-- Authentication check -->
  <LoginReader client:load />

  <!-- Profile content -->
  <UserOnly client:load lang={lang}>
    <ProfileView client:load lang={lang} />
  </UserOnly>
</Layout>
