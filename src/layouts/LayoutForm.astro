---
import "@/styles/global.css";
import "@/styles/animations.css";
import "@/styles/Components/main.css";
import AccessibilityMenu from "@/components/tsx/AccessibilityMenu/AccessibilityMenu";
import Footer from "@/components/ui/Footer.astro";
import { t } from "@/modules/YOLI/injector";

// src/layouts/Layout.astro
const { lang, title, metaTitle, metaDescription, canonicalUrl, previewImage } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Lahia" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaDescription} />
    <title>{title}</title>
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0f172a">

    <!-- Open Graph / Facebook, LinkedIn, WhatsApp -->
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={previewImage} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={previewImage} />

    <link rel="canonical" href={canonicalUrl} />

    <!-- Styles imported at component level (astro:import) -->
    <!-- Script para aplicar tema persistido antes de renderizar -->
    <script is:inline>
      (function () {
        // --- Theme ---
        const theme = localStorage.getItem("theme");
        const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const shouldBeDark = theme === "dark" || (theme === null && systemDark);

        if (shouldBeDark) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // --- Accessibility Modes (ADHD & Epilepsy) ---
        if (localStorage.getItem("mode-epilepsy") === "true") {
          document.documentElement.classList.add("mode-epilepsy");
        }
        if (localStorage.getItem("mode-adhd") === "true") {
          document.documentElement.classList.add("mode-adhd");
        }
        if (localStorage.getItem("mode-aaa") === "true") {
          document.documentElement.classList.add("mode-aaa");
        }

        // --- CVD Mode (Color Vision Deficiency) ---
        const cvdMode = localStorage.getItem("cvd-mode");
        const validCvdModes = [
          "cvd-protanopia",
          "cvd-deuteranopia",
          "cvd-tritanopia",
          "cvd-achromatopsia",
        ];

        document.documentElement.classList.remove(...validCvdModes);

        if (cvdMode && validCvdModes.includes(cvdMode)) {
          document.documentElement.classList.add(cvdMode);
        }
      })();
    </script>
  </head>
  <body
    class="bg-sky-50 dark:bg-slate-800 text-slate-900 dark:text-slate-50 transition-colors duration-300 min-h-screen flex flex-col"
  >
    <a href="#main-content" class="skip-link">{t("common.skip_to_content", lang)}</a>
    <header class="flex justify-between items-center p-4">
      <!-- Botón de flecha atrás -->
      <a
        href={`/${lang}/`}
        class="flex items-center text-slate-700 dark:text-slate-200 hover:text-sky-600 dark:hover:text-sky-400 transition"
        aria-label={t("header.aria.back", lang)}
      >
        <!-- Icono de flecha -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
        </svg>
        {t("common.back", lang)}
      </a>

      <!-- Botón de cambio de tema / Menú Accesibilidad -->
      <AccessibilityMenu client:load lang={lang} />
    </header>

    <main id="main-content" class="flex-1 flex flex-col animate-pageChange mb-5" tabindex="-1">
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- SVG Filters for Color Vision Deficiency (CVD) -->
    <svg style="display: none;">
      <filter id="protanopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.567, 0.433, 0, 0, 0, 0.558, 0.442, 0, 0, 0, 0, 0.242, 0.758, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
      <filter id="deuteranopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.625, 0.375, 0, 0, 0, 0.7, 0.3, 0, 0, 0, 0, 0.3, 0.7, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
      <filter id="tritanopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.95, 0.05, 0, 0, 0, 0, 0.433, 0.567, 0, 0, 0, 0.475, 0.525, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
    </svg>
  </body>
</html>
