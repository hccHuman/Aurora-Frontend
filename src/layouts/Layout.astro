---
/**
 * Main Layout Component
 *
 * This is the root layout wrapper for all pages in the application.
 * Responsibilities:
 * - SEO metadata handling (Open Graph, Twitter Cards, canonical URLs)
 * - Theme initialization script for preventing theme flash on page load
 * - Header and Footer components wrapping
 * - Full-page structure with proper flex layout that extends to full height
 */

import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";
import LoginReader from "@/components/tsx/statement/loginReader";
import ProductModalWrapper from "@/components/tsx/Modal/ProductModalWrapper";
import ToastContainer from "@/modules/ALBA/components/ToastContainer";

// Destructure props: language, titles, URLs, and preview image for SEO
const {
  lang,
  title,
  metaTitle,
  metaDescription,
  canonicalUrl,
  previewImage,
  home,
  showSearch = false,
  searchCategoryId = null,
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="HCC" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaDescription} />
    <title>{title}</title>
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook, LinkedIn, WhatsApp -->
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={previewImage} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={previewImage} />

    <link rel="canonical" href={canonicalUrl} />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="stylesheet" href="/src/styles/animations.css" />
    <link rel="stylesheet" href="/src/styles/Components/main.css" />
    <script type="module" src="/src/main.ts"></script>

    <!-- Script para aplicar tema persistido antes de renderizar -->
    <!-- This script runs BEFORE rendering to prevent theme flash -->
    <script is:inline>
      /**
       * Theme initialization script
       * Runs immediately when page loads to apply saved theme preference
       * Prevents flash of unstyled content (FOUC) when switching themes
       */
      (function () {
        // --- Theme (Light/Dark) ---
        const theme = localStorage.getItem("theme");
        const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const shouldBeDark = theme === "dark" || (theme === null && systemDark);

        if (shouldBeDark) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // --- Accessibility Modes (ADHD & Epilepsy) ---
        if (localStorage.getItem("mode-epilepsy") === "true") {
          document.documentElement.classList.add("mode-epilepsy");
        }
        if (localStorage.getItem("mode-adhd") === "true") {
          document.documentElement.classList.add("mode-adhd");
        }

        // --- CVD Mode (Color Vision Deficiency) ---
        const cvdMode = localStorage.getItem("cvd-mode");
        const validCvdModes = [
          "cvd-protanopia",
          "cvd-deuteranopia",
          "cvd-tritanopia",
          "cvd-achromatopsia",
        ];

        document.documentElement.classList.remove(...validCvdModes);

        if (cvdMode && validCvdModes.includes(cvdMode)) {
          document.documentElement.classList.add(cvdMode);
        }
      })();
    </script>
  </head>
  <body
    class="bg-sky-50 dark:bg-slate-800 text-slate-900 dark:text-slate-50 transition-colors duration-300 h-fit overflow-x-hidden"
  >
    <Header
      cartCount={3}
      lang={lang}
      home={home}
      showSearch={showSearch}
      searchCategoryId={searchCategoryId}
    />
    <main class="flex-1 flex flex-col pt-4 animate-pageChange">
      <slot />
    </main>
    <Footer lang={lang} />
    <LoginReader client:load />
    <!-- Global product modal wrapper: mounts on client, exposes openProductModal(id) -->
    <ProductModalWrapper client:load />
    <ToastContainer client:load />

    <!-- SVG Filters for Color Vision Deficiency (CVD) -->
    <svg style="display: none;">
      <!-- Protanopia: Red-blindness simulation -->
      <filter id="protanopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.567, 0.433, 0, 0, 0, 0.558, 0.442, 0, 0, 0, 0, 0.242, 0.758, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
      <!-- Deuteranopia: Green-blindness simulation -->
      <filter id="deuteranopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.625, 0.375, 0, 0, 0, 0.7, 0.3, 0, 0, 0, 0, 0.3, 0.7, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
      <!-- Tritanopia: Blue-blindness simulation -->
      <filter id="tritanopia-filter">
        <feColorMatrix
          type="matrix"
          values="0.95, 0.05, 0, 0, 0, 0, 0.433, 0.567, 0, 0, 0, 0.475, 0.525, 0, 0, 0, 0, 0, 1, 0"
        ></feColorMatrix>
      </filter>
    </svg>
  </body>
</html>
