---
/**
 * Header Component - Navigation and Branding
 *
 * Main application header with responsive navigation, search, cart, and user menu.
 * Includes desktop and mobile versions with proper accessibility attributes.
 *
 * Features:
 * - Logo and branding with link to home
 * - Navigation links (Home, Products, Offers) - conditionally shown based on `home` prop
 * - Search bar (desktop and mobile versions)
 * - Account dropdown menu (redirects to login if not authenticated)
 * - Shopping cart button with item count badge
 * - Theme toggle (light/dark mode)
 * - Responsive design (hidden on mobile, hamburger menu)
 * - Dark mode support with Tailwind classes
 * - Click-outside detection to close dropdowns
 *
 * Props:
 * - cartCount: Number of items in cart (default: 0)
 * - lang: Current language (en or es) for navigation URLs
 * - home: Boolean to show/hide home link
 *
 * Structure:
 * 1. Desktop header with flex layout
 * 2. Logo and brand name
 * 3. Desktop navigation menu
 * 4. Search bar with icon toggle
 * 5. Account menu dropdown (toggles on click)
 * 6. Cart menu dropdown with quick links
 * 7. Theme toggle component
 * 8. Mobile hamburger menu (visible only on small screens)
 * 9. Mobile dropdown menus (Account, Cart)
 * 10. Inline script for dropdown toggle behavior
 */
import { Image } from "astro:assets";
import AccountMenu from "../tsx/AccountMenu/AccountMenu";
import HeaderSearch from "../tsx/Header/HeaderSearch";
import AccessibilityMenu from "../tsx/AccessibilityMenu/AccessibilityMenu";
import CartCount from "../tsx/Header/CartCount";
const { lang, home, showSearch, searchCategoryId = null, about } = Astro.props;

import { t } from "@/modules/YOLI/injector";
import "@/styles/Components/Header.css";

import iconImg from "@/assets/icon.png";
import accountImg from "@/assets/Icons/dark/account.png";
import cartImg from "@/assets/Icons/dark/cart.png";
---

<header
  class="w-full bg-slate-900 dark:bg-slate-950 text-white dark:text-slate-50 border-b border-sky-100 dark:border-slate-700 shadow-md transition-colors duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <!-- LOGO SECTION -->
    <a
      href={`/${lang}/`}
      class="flex items-center gap-2 font-bold text-xl tracking-wide hover:opacity-80 transition"
      aria-label={t("header.home", lang)}
      role="link"
    >
      <Image
        src={iconImg}
        alt={"Aurora Shop Logo"}
        class="w-16 sm:w-20 h-16 sm:h-20 rounded-full object-cover"
        inferSize={true}
      />
      <span>Lahia Shop</span>
    </a>

    <!-- DESKTOP NAVIGATION & ICONS (hidden on mobile/tablet, shown on lg+) -->
    <div class="hidden lg:flex items-center gap-6">
      {/* Main navigation links */}
      <nav
        class="flex gap-6 text-sm"
        aria-label={t("header.aria.nav_main", lang)}
        role="navigation"
      >
        {
          home && (
            <a href={`/${lang}/`} class="hover:text-red-400 transition" role="link">
              {t("header.home", lang)}
            </a>
          )
        }
        <a href={`/${lang}/products/allproducts`} class="hover:text-red-400 transition" role="link">
          {t("header.products", lang)}
        </a>
        <a href={`/${lang}/about`} class="hover:text-red-400 transition" role="link">
          {t("about.title", lang)}
        </a>
      </nav>

      <div class="flex items-center gap-4">
        <!-- Search component (desktop) -->
        {
          showSearch && home && (
            <div role="search">
              <HeaderSearch
                client:load
                placeholder={t("header.search_placeholder", lang)}
                ariaLabel={t("header.aria.search", lang)}
                categoryId={searchCategoryId}
                id="search-input-desktop"
              />
            </div>
          )
        }

        {/* Account menu dropdown - desktop */}
        <div class="relative flex-shrink-0">
          <button
            id="account-toggle"
            aria-label={t("header.aria.account", lang)}
            aria-expanded="false"
            aria-haspopup="true"
            aria-controls="account-menu"
            class="hover:opacity-75 transition"
          >
            <Image
              src={accountImg}
              alt={"account light"}
              class="w-10 h-10 dark:hidden rounded-full object-cover"
              inferSize={true}
            />
            <Image
              src={accountImg}
              alt={"account dark"}
              class="w-10 h-10 hidden dark:block rounded-full object-cover"
              inferSize={true}
            />
          </button>
          <div
            id="account-menu"
            class="hidden absolute right-0 mt-2 z-50 dropdown-animate"
            role="menu"
          >
            <div class="w-56">
              <AccountMenu client:load lang={lang} />
            </div>
          </div>
        </div>

        {/* Cart dropdown - desktop */}
        <div class="relative flex-shrink-0">
          <button
            id="cart-toggle"
            aria-label={t("header.aria.cart", lang)}
            aria-expanded="false"
            aria-haspopup="true"
            aria-controls="cart-menu"
            class="hover:opacity-75 transition relative"
          >
            <Image
              src={cartImg}
              alt={"cart light"}
              class="w-10 h-10 dark:hidden rounded-full object-cover"
              inferSize={true}
            />
            <Image
              src={cartImg}
              alt={"cart dark"}
              class="w-10 h-10 hidden dark:block rounded-full object-cover"
              inferSize={true}
            />
            <CartCount client:load variant="badge" />
          </button>
          <div
            id="cart-menu"
            class="hidden absolute right-0 mt-3 w-72 bg-slate-900/95 backdrop-blur-md border border-slate-700/50 rounded-xl shadow-2xl z-50 p-5 transition-all animate-in fade-in zoom-in-95 duration-300"
            role="menu"
          >
            <div class="flex flex-col gap-2">
              <h3
                class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-2 flex items-center gap-2"
              >
                {t("header.cart", lang)}
              </h3>
              <a
                href={`/${lang}/products/checkout`}
                class="finalize-purchase flex items-center gap-3 px-4 py-3 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/30 hover:border-slate-600 rounded-lg text-slate-200 transition-all duration-200 group"
                role="menuitem"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-4 h-4 text-red-400 group-hover:scale-110 transition-transform"
                  ><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path><path
                    d="M3 6h18"></path><path d="M16 10a4 4 0 0 1-8 0"></path></svg
                >
                <span>{t("header.view_cart", lang)}</span>
              </a>
              <div class="h-px bg-slate-700/50 my-1 mx-2"></div>
              <a
                href={`/${lang}/products/checkout`}
                class="finalize-purchase flex items-center gap-3 px-4 py-3 bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 hover:border-red-500/50 rounded-lg text-red-400 transition-all duration-200 group"
                role="menuitem"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-4 h-4 text-red-400 group-hover:scale-110 transition-transform"
                  ><rect width="20" height="14" x="2" y="5" rx="2"></rect><line
                    x1="2"
                    x2="22"
                    y1="10"
                    y2="10"></line></svg
                >
                <span>{t("header.checkout", lang)}</span>
              </a>
            </div>
          </div>
        </div>

        {/* Accessibility Menu */}
        <div class="flex-shrink-0">
          <AccessibilityMenu client:load lang={lang} />
        </div>
      </div>
    </div>

    {/* Mobile header (visible only on mobile/tablet) */}
    <div class="flex items-center gap-4 lg:hidden">
      <AccessibilityMenu client:load lang={lang} />
      {/* Mobile menu hamburger button */}
      <button
        id="mobile-toggle"
        class="text-2xl"
        aria-label={t("header.aria.open_menu", lang)}
        aria-expanded="false"
        aria-haspopup="true"
        aria-controls="mobile-menu">☰</button
      >
    </div>
  </div>

  {/* MOBILE NAVIGATION MENU (hidden by default, toggled with hamburger) */}
  <nav
    id="mobile-menu"
    class="lg:hidden flex flex-col gap-4 px-4 py-4 border-sky-100 dark:border-slate-600 border-t bg-slate-900 dark:bg-slate-950 text-white dark:text-slate-100 transition-colors duration-300"
    aria-label={t("header.aria.nav_mobile", lang)}
    role="navigation"
  >
    {/* Quick links section */}
    <div class="flex flex-col gap-2">
      <p class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1">
        {t("header.quick_links", lang)}
      </p>
      <div class="flex flex-col md:flex-row md:flex-wrap gap-2 md:gap-6 md:items-center">
        {
          home && (
            <a
              href={`/${lang}/`}
              class="flex items-center gap-2 py-2 px-3 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
              role="link"
            >
              <span class="w-1.5 h-1.5 rounded-full bg-red-400" />
              {t("header.home", lang)}
            </a>
          )
        }
        <a
          href={`/${lang}/products/allproducts`}
          class="flex items-center gap-2 py-2 px-3 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-700 dark:text-slate-100"
          role="link"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-sky-400"></span>
          {t("header.products", lang)}
        </a>
        <a
          href={`/${lang}/about`}
          class="flex items-center gap-2 py-2 px-3 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-700 dark:text-slate-100"
          role="link"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-emerald-400"></span>
          {t("about.title", lang)}
        </a>
      </div>
    </div>

    <!-- Mobile search (client) -->
    {
      showSearch && !home && !about && (
        <div role="search" class="w-full">
          <HeaderSearch
            client:load
            placeholder={t("header.search_placeholder", lang)}
            ariaLabel={t("header.aria.search", lang)}
            categoryId={searchCategoryId}
            id="search-input-mobile"
          />
        </div>
      )
    }

    {/* Mobile account dropdown */}
    <div class="relative mt-2">
      <button
        id="account-toggle-mobile"
        aria-label={t("header.aria.account", lang)}
        aria-expanded="false"
        aria-haspopup="true"
        aria-controls="mobile-menu"
        class="hover:bg-slate-800 bg-slate-900/50 backdrop-blur-sm transition-all w-full text-left py-3 px-4 border border-slate-700/50 rounded-xl text-slate-100 font-medium flex justify-between items-center"
      >
        <span>{t("header.account", lang)}</span>
        <span class="opacity-50">▼</span>
      </button>
      <div
        id="account-menu-mobile"
        class="hidden mt-2 w-full bg-slate-950/50 backdrop-blur-md border border-slate-700/50 rounded-xl shadow-2xl z-[60] p-1 transition-all duration-300"
        role="menu"
      >
        <AccountMenu client:load lang={lang} />
      </div>
    </div>

    {/* Mobile cart dropdown */}
    <div class="relative mt-2">
      <button
        id="cart-toggle-mobile"
        aria-label={t("header.aria.cart", lang)}
        aria-expanded="false"
        aria-haspopup="true"
        aria-controls="cart-menu-mobile"
        class="hover:bg-slate-800 bg-slate-900/50 backdrop-blur-sm transition-all w-full text-left py-1.5 px-4 border border-slate-700/50 rounded-xl text-slate-100 font-medium"
      >
        <CartCount client:load variant="button" />
      </button>
      <div
        id="cart-menu-mobile"
        class="hidden mt-2 w-full bg-slate-900/95 backdrop-blur-md border border-slate-700/50 rounded-xl shadow-2xl z-50 p-5 transition-all duration-300"
        role="menu"
      >
        <div class="flex flex-col gap-2">
          <h3
            class="text-xs font-bold uppercase tracking-wider text-slate-400 mb-2 flex items-center gap-2"
          >
            {t("header.cart", lang)}
          </h3>
          <a
            href={`/${lang}/products/checkout`}
            class="finalize-purchase flex items-center gap-3 px-4 py-3 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/30 hover:border-slate-600 rounded-lg text-slate-200 transition-all duration-200 group"
            role="menuitem"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-4 h-4 text-red-400 group-hover:scale-110 transition-transform"
              ><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path><path d="M3 6h18"
              ></path><path d="M16 10a4 4 0 0 1-8 0"></path></svg
            >
            <span>{t("header.view_cart", lang)}</span>
          </a>
          <div class="h-px bg-slate-700/50 my-1 mx-2"></div>
          <a
            href={`/${lang}/products/checkout`}
            class="finalize-purchase flex items-center gap-3 px-4 py-3 bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 hover:border-red-500/50 rounded-lg text-red-400 transition-all duration-200 group"
            role="menuitem"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-4 h-4 text-red-400 group-hover:scale-110 transition-transform"
              ><rect width="20" height="14" x="2" y="5" rx="2"></rect><line
                x1="2"
                x2="22"
                y1="10"
                y2="10"></line></svg
            >
            <span>{t("header.checkout", lang)}</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  {/* DROPDOWN & MENU TOGGLE SCRIPT */}
  <script is:inline>
    // Ensure DOM is ready before attaching event listeners
    function initMenus() {
      const lang = document.documentElement.lang || "es";

      /**
       * Mobile menu toggle
       * Shows/hides full mobile menu on hamburger button click
       */
      const mobileToggle = document.getElementById("mobile-toggle");
      const mobileMenu = document.getElementById("mobile-menu");

      function closeAllMenus() {
        if (accountMenu) accountMenu.classList.add("hidden");
        if (cartMenu) cartMenu.classList.add("hidden");
        if (accountMenuMobile) accountMenuMobile.classList.add("hidden");
        if (cartMenuMobile) cartMenuMobile.classList.add("hidden");

        // Close mobile overlay too
        if (mobileMenu) mobileMenu.classList.remove("open");

        // Reset ARIA
        if (accountToggle) accountToggle.setAttribute("aria-expanded", "false");
        if (cartToggle) cartToggle.setAttribute("aria-expanded", "false");
        if (accountToggleMobile) accountToggleMobile.setAttribute("aria-expanded", "false");
        if (cartToggleMobile) cartToggleMobile.setAttribute("aria-expanded", "false");
        if (mobileToggle) mobileToggle.setAttribute("aria-expanded", "false");
      }

      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", (e) => {
          e.stopPropagation();
          const isCurrentlyOpen = mobileMenu.classList.contains("open");
          closeAllMenus();

          if (!isCurrentlyOpen) {
            mobileMenu.classList.add("open");
            mobileToggle.setAttribute("aria-expanded", "true");
          }
        });
      }

      /**
       * Desktop account menu dropdown
       * Shows account menu if logged in, redirects to login page if not
       */
      const accountToggle = document.getElementById("account-toggle");
      const accountMenu = document.getElementById("account-menu");

      if (accountToggle && accountMenu) {
        accountToggle.addEventListener("click", (e) => {
          e.stopPropagation();
          if (sessionStorage.getItem("login") !== "true") {
            // Redirect to login page if not authenticated
            window.location.href = `/${lang}/account/login`;
          } else {
            // Close others
            const isHidden = accountMenu.classList.contains("hidden");
            closeAllMenus();

            // Show/hide account dropdown
            if (isHidden) {
              accountMenu.classList.remove("hidden");
              accountToggle.setAttribute("aria-expanded", "true");
            }
          }
        });

        // Close menu when a link inside is clicked (desktop)
        const accountLinks = accountMenu.querySelectorAll("a");
        accountLinks.forEach((link) => {
          link.addEventListener("click", () => {
            accountMenu.classList.add("hidden");
            accountToggle.setAttribute("aria-expanded", "false");
          });
        });
      }

      /**
       * Desktop cart menu dropdown
       * Shows cart summary with quick links to cart and checkout
       */
      const cartToggle = document.getElementById("cart-toggle");
      const cartMenu = document.getElementById("cart-menu");

      if (cartToggle && cartMenu) {
        cartToggle.addEventListener("click", (e) => {
          e.stopPropagation();
          const isHidden = cartMenu.classList.contains("hidden");
          closeAllMenus();

          if (isHidden) {
            cartMenu.classList.remove("hidden");
            cartToggle.setAttribute("aria-expanded", "true");
          }
        });

        // Close menu when a link inside is clicked (desktop)
        const cartLinks = cartMenu.querySelectorAll("a");
        cartLinks.forEach((link) => {
          link.addEventListener("click", () => {
            cartMenu.classList.add("hidden");
            cartToggle.setAttribute("aria-expanded", "false");
          });
        });
      }

      /**
       * Mobile account menu dropdown
       * Same behavior as desktop but for mobile version
       */
      const accountToggleMobile = document.getElementById("account-toggle-mobile");
      const accountMenuMobile = document.getElementById("account-menu-mobile");

      if (accountToggleMobile && accountMenuMobile) {
        accountToggleMobile.addEventListener("click", (e) => {
          e.stopPropagation();
          if (sessionStorage.getItem("login") !== "true") {
            window.location.href = `/${lang}/account/login`;
          } else {
            accountMenuMobile.classList.toggle("hidden");
            accountToggleMobile.setAttribute(
              "aria-expanded",
              !accountMenuMobile.classList.contains("hidden") ? "true" : "false"
            );
          }
        });
      }

      /**
       * Mobile cart menu dropdown
       * Same behavior as desktop but for mobile version
       */
      const cartToggleMobile = document.getElementById("cart-toggle-mobile");
      const cartMenuMobile = document.getElementById("cart-menu-mobile");

      if (cartToggleMobile && cartMenuMobile) {
        cartToggleMobile.addEventListener("click", (e) => {
          e.stopPropagation();
          cartMenuMobile.classList.toggle("hidden");
          cartToggleMobile.setAttribute(
            "aria-expanded",
            !cartMenuMobile.classList.contains("hidden") ? "true" : "false"
          );
        });
      }

      /**
       * Close mobile account menu when link is clicked
       * Automatically collapses dropdown after navigation
       */
      if (accountMenuMobile) {
        const accountLinksM = accountMenuMobile.querySelectorAll("a");
        accountLinksM.forEach((link) => {
          link.addEventListener("click", () => {
            accountMenuMobile.classList.add("hidden");
            if (accountToggleMobile) {
              accountToggleMobile.setAttribute("aria-expanded", "false");
            }
          });
        });
      }

      /**
       * Close mobile cart menu when link is clicked
       * Automatically collapses dropdown after navigation
       */
      if (cartMenuMobile) {
        const cartLinksM = cartMenuMobile.querySelectorAll("a");
        cartLinksM.forEach((link) => {
          link.addEventListener("click", () => {
            cartMenuMobile.classList.add("hidden");
            if (cartToggleMobile) {
              cartToggleMobile.setAttribute("aria-expanded", "false");
            }
          });
        });
      }

      /**
       * Close dropdowns when clicking outside
       * Click detection system that closes menus when user clicks elsewhere
       * Excludes: search inputs, theme toggle, header element (to avoid closing on internal clicks)
       */
      function closeAllMenus() {
        if (accountMenu) accountMenu.classList.add("hidden");
        if (cartMenu) cartMenu.classList.add("hidden");
        if (accountMenuMobile) accountMenuMobile.classList.add("hidden");
        if (cartMenuMobile) cartMenuMobile.classList.add("hidden");
        if (mobileMenu) mobileMenu.classList.remove("open");

        // Update aria-expanded attributes
        if (accountToggle) accountToggle.setAttribute("aria-expanded", "false");
        if (cartToggle) cartToggle.setAttribute("aria-expanded", "false");
        if (accountToggleMobile) accountToggleMobile.setAttribute("aria-expanded", "false");
        if (cartToggleMobile) cartToggleMobile.setAttribute("aria-expanded", "false");
        if (mobileToggle) mobileToggle.setAttribute("aria-expanded", "false");
      }

      document.addEventListener("click", (e) => {
        const target = e.target;

        // Don't close if clicking on search field or buttons
        if (target.closest("input") || target.closest("button[type='submit']")) {
          return;
        }

        // Don't close if clicking on theme toggle
        if (target.closest("#theme-toggle") || target.closest(".theme-toggle")) {
          return;
        }

        // Don't close if clicking anywhere in header
        if (target.closest("header")) {
          return;
        }

        closeAllMenus();
      });

      // Listen for global logout event
      window.addEventListener("aurora-logout", closeAllMenus);
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initMenus);
    } else {
      initMenus();
    }

    // Re-initialize menus after Astro transitions (ClientRouter)
    document.addEventListener("astro:after-swap", () => {
      initMenus();
    });
  </script>
  <script is:inline>
    // Setup finalize purchase links with session awareness
    (function () {
      function navigateTo(url) {
        if (typeof window !== "undefined" && typeof window.goTo === "function") {
          window.goTo(url);
          return;
        }
        try {
          window.location.assign(url);
        } catch (e) {
          try {
            window.location.href = url;
          } catch (err) {
            // fallback
          }
        }
      }

      function handleFinalizeLinkClick(e, lang = "es") {
        e.preventDefault();
        let loginFlag = null;
        try {
          if (typeof window !== "undefined") {
            loginFlag = window.sessionStorage.getItem("login");
          }
        } catch (err) {
          // ignore storage errors
        }
        if (loginFlag === "true") {
          navigateTo(`/${lang}/products/checkout`);
        } else {
          navigateTo(`/${lang}/account/login`);
        }
      }

      function setupFinalizeLinks(lang = "es") {
        if (typeof document === "undefined") return;
        const links = document.querySelectorAll(".finalize-purchase");
        links.forEach((link) => {
          link.addEventListener("click", (e) => handleFinalizeLinkClick(e, lang));
        });
      }

      // Initialize on DOMContentLoaded
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
          const lang = document.documentElement.lang || "es";
          setupFinalizeLinks(lang);
        });
      } else {
        const lang = document.documentElement.lang || "es";
        setupFinalizeLinks(lang);
      }

      // Re-initialize after Astro transitions
      document.addEventListener("astro:after-swap", () => {
        const lang = document.documentElement.lang || "es";
        setupFinalizeLinks(lang);
      });
    })();
  </script>
</header>
