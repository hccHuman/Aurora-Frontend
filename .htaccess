# ───────────── COMPRESIÓN GZIP ─────────────
<IfModule mod_deflate.c>
  # Comprimir tipos de archivo comunes en web
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
  AddOutputFilterByType DEFLATE application/javascript application/json application/xml
  AddOutputFilterByType DEFLATE font/woff font/woff2

  # Excluir imágenes y otros ya comprimidos
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|mp4|mp3|pdf|woff2?)$ no-gzip

  # Añadir cabeceras de compresión para compatibilidad
  Header append Vary User-Agent
</IfModule>

# ───────────── CACHE BÁSICO ─────────────
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 hour"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
</IfModule>

# ───────────── REDIRECCIONES Y SEGURIDAD ─────────────
